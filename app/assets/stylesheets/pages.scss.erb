@import 'mixins';

body {
  font-size: 10px;
  background-color: $backgroundBeige;
}

$mediumBorderRadius: 7px;
$smallBorderRadius: 3px;

banner {
  background-color: $yellow;
  display: block;
  text-align: center;
  font-size: 2em;
  padding: .3em .1em;
  @include avenirRoman;
}

.header {
  background-image: url('<%= image_path('background.jpg') %>');
  background-size: cover;
  background-position: center 0;
  border-radius: 0 0 $mediumBorderRadius $mediumBorderRadius;

  .title {
    color: white;
    text-shadow: 0 5px 5px rgba(0, 0, 0, .7);
    text-align: center;
    white-space: nowrap;
    line-height: 1.05;

    .quiet-font { font-family: 'Playfair Display', helvetica, serif; }
    .loud-font { font-family: 'Abril Fatface', helvetica, serif; }
    .italic { font-style: italic; }

    .elect { font-size: 4.3em; letter-spacing: 5px; }
    .scott-cameron { font-size: 6.8em; color: $yellow; }
    .to-the-northern-virginia { font-size: 3.6em; }
    .soil-and-water { font-size: 5.3em; letter-spacing: 3px; }
    .conservation-board { font-size: 4.3em; }
  }

}

.sidebar {

  > .profile-box {
    background-color: $green;
    background: linear-gradient(to top right, $green, $greenLight);
    border-radius: $smallBorderRadius;

    > .profile {
      border-radius: $mediumBorderRadius;
    }
  }

  .links {
    font-family: 'Playfair Display', serif;
    font-style: italic;
    font-size: 2.22em;

    > .link {
      border-radius: 4px;
      border: 3px solid $backgroundBeige;
      color: $greenLight;
      transition: all .1s;
      user-select: none;
      text-decoration: none;

      &:hover {
        border: 3px solid $greenDarkHover;
        color: $greenDarkHover;
      }

      &:active, &.active {
        border: 3px solid $greenDarkActive;
        color: $greenDarkActive;
      }
    }
  }
}

.content-box {
  background-color: $green;
  background: linear-gradient(to top left, $green, $greenLight);
  border-radius: $mediumBorderRadius;

  .content {
    background-color: white;
    font-size: 16px;
    border-radius: $smallBorderRadius;
    line-height: 1.5em;

    h2 {
      @include avenirBook;
      color: $textDarkest;
      text-align: center;
    }

    h3 {
      @include avenirRoman;
      color: $textDark;
      text-align: center;
    }


    h4 {
      @include avenirRoman;
      text-align: center;
      margin-top: 0;
      margin-bottom: 1.5em;
      color: $textLightest;
    }

    th {
      @include avenirRoman;
      color: $textDark;
      text-align: center;
    }

    ul {
      margin-top: 0;
      // margin-bottom: 2em;
    }

    li {
      color: $textLight;
    }
  }
}

.hide {
  display: none !important;
}

#donate {

  .buttons {
    display: flex;
    flex-flow: row wrap;
    margin: 0 auto;
    max-width: 400px;
  }

  button {
    flex-grow: 1;
  }

  button, .submit {
    border: 0;
    outline: 0;
    position: relative;
    border-radius: 0 0 5px 5px;
    color: white;
    background-color: $greenLight;
    top: 0px;
    box-shadow: 0 6px $greenDark;
    transition: all .03s;
    user-select: none;

    &:hover {
      top: 2px;
      box-shadow: 0 4px $greenDark;
    }

    &:active {
      top: 4px;
      box-shadow: 0 2px $greenDark;
    }
  }

  @mixin readableCopy {
    text-align: center;
    font-size: 19px;
    letter-spacing: 1px;
  }

  .amount {
    margin: 1em;
    padding: .5em 1em;
    @include readableCopy;
    font-weight: 700;
    min-width: 105px;

    width: 27%;
  }

  .other {
    width: 100%;
    margin: 1em;
    display: flex;
    flex-wrap: nowrap;

    * {
      padding: .5em 1em;
    }

    input {
      flex-grow: 2;
      position: relative;
      top: 6px;
      margin-right: 1em;
      @include readableCopy;
      border: 1px inset $backgroundBeige;
      outline: 0;
    }

    .submit {
      @include readableCopy;
      flex-grow: 1;
      min-width: 105px;

      &.disabled {
        top: 2px;
        box-shadow: 0 4px $greyDark;
        background-color: $grey;
        user-select: none;
        cursor: initial;
      }

    }
  }

}

#scorecard {
  tr:hover td {
    background-color: $backgroundBeige;
  }

  th {
    background-color: #3CB47A;
    font-weight: 600;
    color: white;
    font-size: 110%;
  }

  th, td {
    border: 1px solid #000000;
    padding: 7px;
  }
}

// sweetAlert overrides
.sweet-alert button {
  background-color: $greenLight !important;

  &:hover {
    background-color: $greenDarkHover !important;
  }

  &:active {
    background-color: $greenDarkActive !important;
  }
}

#issues {
  ul {
    margin-top: 2em;
  }

}

a {
  color: $greenLight;
  text-decoration: none;
  &:hover {
    text-decoration: underline;
  }
  &:visited {
    background-color: $greenDark;
  }
}

.issue {
  border: 2px outset $backgroundBeige;
  margin: 2em 1em;
  padding: 1em 3em;
}

p {
  color: #484848;
}
