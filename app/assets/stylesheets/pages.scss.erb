body {
  font-size: 10px;
}

.header {
  background-image: url('<%= image_path('header.jpg') %>');
  height: 48em;
  position: relative;

  .title {
    text-align: center;
    .quiet-font { font-family: 'Playfair Display', serif; }
    .loud-font { font-family: 'Abril Fatface', cursive; }
    .italic { font-style: italic; }
  
    .elect {}
    .scott-cameron {}
    .to-the {}
    .northern-virginia {}
    .soil-and-water {}
    .conservation-board {}
  }

}

.profile-box {
  position: absolute;
  background: blue;
  width: 22em;
  height: 30em;
  left: 2em;
  bottom: -20%;

  .profile {
    width: 20em;
    height: 28em;
    position: absolute;
    top: 1em;
    left: 1em;
  }
}

.content-box {
  .content {
    font-size: 16px;
    line-height: 1.5em;
    width: 50%;
  }
}
