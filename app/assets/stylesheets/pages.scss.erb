@mixin absolute-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);  
}

body {
  font-size: 10px;
  width: 90%;
  max-width: 1280px;
  margin: 0 auto;
}

.header {
  background-image: url('<%= image_path('background.jpg') %>');
  background-size: cover;
  background-position: center 0;
  height: 48em;
  position: relative;

  .title {
    @include absolute-center;
    color: white;
    text-shadow: 0 5px 5px rgba(0, 0, 0, .7);
    text-align: center;
    white-space: nowrap;
    .quiet-font { font-family: 'Playfair Display', serif; }
    .loud-font { font-family: 'Abril Fatface', cursive; }
    .italic { font-style: italic; }
    .shadow ~ * { 
      // background-color: blue;
      margin: none; 
      padding: none; 
      height: 1em; 
      z-index: 3;
    }
  
    .elect { font-size: 4.3em; letter-spacing: 5px; }
    .scott-cameron { font-size: 6.8em; }
    .to-the-northern-virginia { font-size: 3.6em; }
    .soil-and-water { font-size: 5.3em; letter-spacing: 3px; }
    .conservation-board { font-size: 4.3em; }

    .shadow {
      // display: none;
      @include absolute-center;
      z-index: 2;
    }
  }

}

.container {
  max-width: 1080px;
  display: flex;
  justify-content: space-around;
  margin: 0 auto;

  .sidebar {
    flex-grow: 1;
    padding: 0 2em;
  }

  .content-box {
    flex-grow: 4;
    max-width: 800px;
  }

}

$tealLight: #78C0BB;
$tealDark: #4B9990;

.sidebar {
  position: relative;
  top: -20em;

  > .profile-box {
    background-color: $tealLight;
    background-image: linear-gradient(to bottom right, $tealLight, $tealDark);
    height: 30em;
    width: 22em;

    > .profile {
      padding: 1em;
      box-sizing: border-box;
      width: 100%;
    }
  }

  .links {
    font-family: 'Playfair Display', serif;
    font-style: italic;
    font-size: 2.22em;
    
    > .link {
      margin-top: 1.5em;
    }

    > .link > a {
      color: $tealDark;
      text-decoration: none;
    }
  }
}

$blueLight: #5DBADB;
$blueDark: #448FAB;

.content-box {
  background-color: $blueLight;
  background-image: linear-gradient(to bottom right, $blueLight, $blueDark);

  .content {
    margin: 1em;
    background-color: white;
    font-size: 16px;
    line-height: 1.5em;
  }
}
