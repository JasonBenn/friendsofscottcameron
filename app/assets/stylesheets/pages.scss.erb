body {
  font-size: 10px;
}

.header {
  background-image: url('<%= image_path('background.jpg') %>');
  height: 48em;
  position: relative;

  .title {
    position: relative;
    color: white;
    text-shadow: 0 5px 5px rgba(0, 0, 0, .7);
    text-align: center;
    .quiet-font { font-family: 'Playfair Display', serif; }
    .loud-font { font-family: 'Abril Fatface', cursive; }
    .italic { font-style: italic; }
    .shadow ~ * { 
      margin: none; 
      padding: none; 
      height: 1em; 
      z-index: 2;
    }
  
    .elect { font-size: 4.3em; letter-spacing: 5px; }
    .scott-cameron { font-size: 6.8em; }
    .to-the-northern-virginia { font-size: 3.6em; }
    .soil-and-water { font-size: 5.3em; }
    .conservation-board { font-size: 4.3em; }
    .shadow {
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      z-index: 1;
    }
  }

}

.profile-box {
  position: absolute;
  background: blue;
  width: 22em;
  height: 30em;
  left: 2em;
  bottom: -20%;

  .profile {
    width: 20em;
    height: 28em;
    position: absolute;
    top: 1em;
    left: 1em;
  }
}

.content-box {
  .content {
    font-size: 16px;
    line-height: 1.5em;
    width: 50%;
  }
}
