@mixin absolute-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);  
}

body {
  font-size: 10px;
  width: 90%;
  max-width: 1280px;
  margin: 0 auto;
}

.header {
  background-image: url('<%= image_path('background.jpg') %>');
  background-size: cover;
  background-position: center 0;
  height: 48em;
  position: relative;

  .title {
    @include absolute-center;
    color: white;
    text-shadow: 0 5px 5px rgba(0, 0, 0, .7);
    text-align: center;
    white-space: nowrap;
    .quiet-font { font-family: 'Playfair Display', serif; }
    .loud-font { font-family: 'Abril Fatface', cursive; }
    .italic { font-style: italic; }
    .shadow ~ * { 
      // background-color: blue;
      margin: none; 
      padding: none; 
      height: 1em; 
      z-index: 3;
    }
  
    .elect { font-size: 4.3em; letter-spacing: 5px; }
    .scott-cameron { font-size: 6.8em; }
    .to-the-northern-virginia { font-size: 3.6em; }
    .soil-and-water { font-size: 5.3em; letter-spacing: 3px; }
    .conservation-board { font-size: 4.3em; }

    .shadow {
      // display: none;
      @include absolute-center;
      z-index: 2;
    }
  }

}

.container {
  display: flex;

}

$tealLight: #78C0BB;
$tealDark: #4B9990;

.sidebar {
  flex-grow: 1;
  // min-width: 22em;
  margin-right: 2em;

  .profile-box {
    position: relative;
    background-color: $tealLight;
    background-image: linear-gradient(to bottom right, $tealLight, $tealDark);
    width: 22em;
    height: 30em;
    top: -20em;

    .profile {
      margin: 1em;
      width: 20em;
      height: 28em;
    }
  }
}

$blueLight: #5DBADB;
$blueDark: #448FAB;

.content-box {
  background-color: $blueLight;
  background-image: linear-gradient(to bottom right, $blueLight, $blueDark);

  .content {
    margin: 1em;
    background-color: white;
    font-size: 16px;
    line-height: 1.5em;
  }
}
