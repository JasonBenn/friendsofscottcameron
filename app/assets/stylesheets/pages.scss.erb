@mixin absolute-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);  
}

$backgroundBeige: #E9E9E9;

body {
  font-size: 10px;
  width: 90%;
  max-width: 1280px;
  margin: 0 auto;
  background-color: $backgroundBeige;
}

.header {
  background-image: url('<%= image_path('background.jpg') %>');
  background-size: cover;
  background-position: center 0;
  height: 48em;
  position: relative;

  .shadow { 
    @include absolute-center;
    margin: none; 
    padding: none; 
    z-index: 1;
  }

  .title {
    @include absolute-center;
    color: white;
    text-shadow: 0 5px 5px rgba(0, 0, 0, .7);
    text-align: center;
    white-space: nowrap;
    z-index: 2;
    line-height: 1.05;

    .quiet-font { font-family: 'Playfair Display', serif; }
    .loud-font { font-family: 'Abril Fatface', cursive; }
    .italic { font-style: italic; }
  
    .elect { font-size: 4.3em; letter-spacing: 5px; }
    .scott-cameron { font-size: 6.8em; }
    .to-the-northern-virginia { font-size: 3.6em; }
    .soil-and-water { font-size: 5.3em; letter-spacing: 3px; }
    .conservation-board { font-size: 4.3em; }
  }

}

.container {
  max-width: 1080px;
  display: flex;
  justify-content: space-around;
  margin: 0 auto;

  .sidebar {
    flex-grow: 1;
    padding: 0 2em;
  }

  .content-box {
    flex-grow: 4;
    max-width: 800px;
    margin-top: 4em;
    margin-bottom: 4em;
  }

}

$tealLight: #78C0BB;
$tealDark: hsla(173, 37%, 45%, 1);
$tealDarkHover: hsla(173, 37%, 60%, 1);
$tealDarkActive: hsla(173, 37%, 50%, 1);

.sidebar {
  position: relative;
  top: -20em;

  > .profile-box {
    background-color: $tealLight;
    background-image: linear-gradient(to bottom right, $tealLight, $tealDark);
    height: 30em;
    width: 22em;

    > .profile {
      padding: 1em;
      box-sizing: border-box;
      width: 100%;
    }
  }

  .links {
    font-family: 'Playfair Display', serif;
    font-style: italic;
    font-size: 2.22em;
    
    > .link {
      margin-top: 1em;
      padding: .5em;
      box-sizing: border-box;
      border-radius: 4px;
      border: 3px solid $backgroundBeige;
      color: $tealDark;
      transition: all .1s;
      user-select: none;
      display: block;
      text-decoration: none;

      &:hover {
        border: 3px solid $tealDarkHover;
        color: $tealDarkHover;
      }

      &:active, &.active {
        border: 3px solid $tealDarkActive;
        color: $tealDarkActive;
      }
    }
  }
}

$blueLight: #5DBADB;
$blueDark: #448FAB;

.content-box {
  background-color: $blueLight;
  background-image: linear-gradient(to bottom right, $blueLight, $blueDark);

  .content {
    margin: 2em;
    padding: 2em;
    background-color: white;
    font-size: 16px;
    line-height: 1.5em;
  }
}
